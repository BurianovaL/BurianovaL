<script>
const quotes = [
  "Sny se neplní, jen se s věkem zmenšují.",
  "Když to dnes pokazíš, zítra to můžeš pokazit znovu – s praxí.",
  "Tvůj potenciál je přeceňovaný, ale aspoň máš potenciál.",
  "Bez práce nejsou koláče. Ale i s prací nejsou zaručené.",
  "Všechno se děje z nějakého důvodu. Většinou špatného.",
  "Zítra bude líp. Ale ne pro tebe.",
  "Není důležité vyhrát, stačí jen neztrapnit se úplně.",
  "Dneska je nový den na stejné chyby.",
  "I cesta dlouhá tisíc mil začíná prvním krokem... do slepé uličky.",
  "Co tě nezabije, to tě většinou unaví.",
  "Na konci tunelu je světlo. Ale je to vlak.",
  "Každý problém má řešení. Ale tobě nedostupné.",
  "Dělej, co miluješ – a stejně tě to bude otravovat.",
  "Trpělivost růže přináší. Ale ty jsi alergický.",
  "Nic není nemožné. Jen většina věcí za to nestojí.",
  "Štěstí přeje připraveným. Ale ne vždy tobě.",
  "Věř v sebe. Aspoň někdo musí.",
  "Když padneš na dno, můžeš tam chvíli zůstat – je to tam klidné.",
  "Život je hra, kterou nikdo nevyhrává.",
  "Čas léčí všechny rány, ale jizvy zůstávají.",
  "Každý den je dar. Bohužel ne vždy požadovaný.",
  "Zázraky se dějí – jen ne zrovna teď.",
  "Nikdy není tak špatně, aby nemohlo být hůř. A často i bude."
];

let index = 0;
let countdown = 25;
const quoteEl = document.getElementById("quote");
const authorEl = document.getElementById("author");
const timerEl = document.getElementById("timer");

function showQuote() {
  quoteEl.textContent = quotes[index];
  authorEl.textContent = "— Demotivátor";
  index = (index + 1) % quotes.length;
}

function updateTimer() {
  timerEl.textContent = countdown;
  countdown--;
  if (countdown < 0) {
    countdown = 25;
    showQuote();
  }
}

showQuote();
setInterval(updateTimer, 1000);
</script>
